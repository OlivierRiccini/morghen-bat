<div class="custom-navbar">
  <div class="navbar-left">
    <%= link_to root_path, class: 'logo' do %>
      <h1>MORGHEN BAT</h1>
      <span></span>
    <% end %>
    <i id="dropdown-menu-btn" class="fas fa-angle-down"></i>
  </div>
  <ul class="nav-list-small-screen">
    <li><%= link_to t('company').upcase, root_path %>
    </li>
    <li class="nav-item-small-screen"><%= link_to t('realizations').upcase, realizations_path %></li>
    <li class="nav-item-small-screen"><%= link_to t('your_project').upcase, your_project_path %></li>
