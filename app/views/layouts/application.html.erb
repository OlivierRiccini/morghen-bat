  <body>
    <div id="landing-mobile">
      <div class='logo'>
        <h1>MORGHEN BAT</h1>
        <span></span>
      </div>
      <h1>Site mobile en construction...</h1>
      <p>N'hésitez pas à consulter le site sur votre ordinateur !</p>
    </div>
    <%= render 'shared/navbar' %>
    <a href="#"><i id="scrollToTop" class="fa fa-arrow-circle-up"></i></a>
    <%= yield %>
    <%= render 'shared/footer' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
