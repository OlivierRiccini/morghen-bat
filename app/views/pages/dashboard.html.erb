          <% end %>
        </div>
      <% end %>
      <div class="col-xs-12 col-sm-4">
        <h3>Ajouter un savoir faire</h3>
        <%= simple_form_for @new_company_know_how do |f| %>
          <%= f.input :content, as: :summernote, label: false %>
          <%= f.file_field :icon %>
          <%= f.input :icon_cache, as: :hidden %>
          <%= f.button :submit, value: 'Ajouter' %>
        <% end %>
      </div>
    </div>
  </div>

<!-- Services section -->
