<!-- Offers section -->
  <span href="#" class="btn-toggle-section-model" data-index-section-model="section-model-offers">Notre offre <i class="fas fa-arrow-down"></i></span>
  <div class="dashboard-section" id="section-model-offers">
    <!-- Edit offer -->
    <% @offers.each do |offer| %>
      <div class="row">
        <div class="col-xs-12 col-sm-6">
          <%= simple_form_for offer do |f| %>
            <%= f.input :name %>
            <%= f.input :category %>
            <%= f.input :price %>
            <%= f.input :time_frame %>
            <%= f.input :content, as: :summernote %>
            <%= f.button :submit, value: 'Save offer' %>
            <%= link_to 'Delete offer', offer_path(offer), remote: true, :method => :delete, :data => {:confirm => "Veux-tu vraiment supprimer cette offre?"}, class: 'btn btn-danger' %>
