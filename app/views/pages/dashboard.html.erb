            <p>Ajouter une nouvelle image</p>
            <%= simple_form_for [ project, @new_pic ] do |f| %>
              <%= f.file_field :url %>
              <%= f.input :url_cache, as: :hidden %>
              <%= f.button :submit, value: 'Save', class: 'btn-save' %>
            <% end %>
          </div>
        </div>
        <% end %>
      </div>
    <% end %>

