            <% end %>
          </div>
          <% offer.pictures.order("created_at DESC").each do |pic| %>
            <div class="offer-pic">
              <%= cl_image_tag pic.url, height:'60' %>
              <%= simple_form_for [ offer, pic ] do |f| %>
                <%= f.file_field :url %>
                <%= f.input :url_cache, as: :hidden %>
                <%= f.button :submit, value: 'Save' %>
                <%= link_to 'Delete', offer_picture_path(offer, pic), remote: true, :method => :delete, :data => {:confirm => "Veux-tu vraiment supprimer cette image?"}, class: 'btn btn-danger' %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
