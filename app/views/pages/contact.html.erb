<div class="container page page-contact" data-page-name="contact">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <p><i class="fas fa-map-marker-alt"></i> <strong><%= t('address').capitalize %>: </strong>
      <% unless @company_details.nil? %>
        <br><%= @company_details.address %>
        <br><%= @company_details.postal_code %> <%= @company_details.city %>
        <br>
        <% if !@company_details.country_name.nil? %>
          <p><%= @company_details.country_name.capitalize %></p>
        <% else %>
          <p><%= @company_details.country.capitalize %></p>
        <% end %>
        <br>
        <p><i class="fas fa-phone"></i> <strong><%= t('phone').capitalize %>: </strong>
        <br><%= @company_details.phone %></p>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <p><%= t('contact_text').capitalize %></p>
      <%= simple_form_for @message do |f| %>
        <div class="col-xs-12 col-sm-6 col-bootstrap-in-form-left">
          <%= f.input :name, label: t('name').capitalize %>
        </div>
        <div class="col-xs-12 col-sm-6 col-bootstrap-in-form-right">
          <%= f.input :email, label: t('email').capitalize %>
        </div>
        <div class="col-xs-12 col-sm-6 col-bootstrap-in-form-left">
          <%= f.input :subject, label: t('subject').capitalize %>
        </div>
        <div class="col-xs-12 col-sm-6 col-bootstrap-in-form-right">
          <%= f.input :type_de_travaux, label: t('type_de_travaux').capitalize, collection: [ t('renovation').capitalize, t('construction').capitalize] %>
        </div>
          <%= label_tag t('corps_de_metier').capitalize + ':' %>
        </br>
        <div class="metier-checkboxes">
          <%  [t('electricity').capitalize, t('painting').capitalize, t('masonry').capitalize, t('cleaning').capitalize, t('plumbing_carpentry').capitalize, t('other').capitalize].each do |e| %>
            <div class="check-box-btn">
              <%= label_tag e %>
              <%= check_box_tag 'message[corps_de_metier][]', e, checked(e), id: "corps_de_metier_#{e}" %>
            </div>
          <% end %>
        </div>
        </br>
        <%= f.input :content, as: :text, label: t('content').capitalize %>
        <%= f.button :submit, value: t('send').capitalize %>
      <% end %>
    </div>
  </div>
</div>
